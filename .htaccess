<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect to staging domain if access via subfolder URL
    RewriteCond %{REQUEST_URI} /stage
    RewriteRule (.*) http://stage.readjust.se/$1 [R=301,L]
    
    # Rewrite www.domain.com -> domain.com -- used with SEO Strict URLs plugin
    RewriteCond %{HTTP_HOST} .
    RewriteCond %{HTTP_HOST} ^www\.readjust\.se [NC]
    RewriteRule (.*) http://readjust.se/$1 [R=301,L]

    # Certain hosts may require the following line.
    # If vanilla is in a subfolder then you need to specify it after the /. 
    # (ex. You put Vanilla in /forum so change the next line to: RewriteBase /forum)
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php\?p=$1 [QSA,L]
    
    # Protect .git directories
    RewriteRule .*\.git/.* - [F]
</IfModule>
